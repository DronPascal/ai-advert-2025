import logging

class Calculator:
    """A simple calculator class to perform basic arithmetic operations.

    This class provides methods to perform basic arithmetic operations such as addition,
    multiplication, and division on two numbers.

    Attributes:
        None
    """

    def __init__(self):
        """Initializes the Calculator class.

        This constructor does not take any parameters and does not perform any operations.
        """
        pass
    
    def calculate(self, operation, a, b):
        """Calculates the result of the specified operation on two numbers.

        Args:
            operation (str): The operation to perform ('add', 'multiply', 'divide').
            a (float): The first number.
            b (float): The second number.

        Returns:
            float: The result of the operation.

        Raises:
            ValueError: If the operation is unsupported.
            ZeroDivisionError: If division by zero is attempted.
        """
        try:
            if operation == "add":
                return self.add_numbers(a, b)
            elif operation == "multiply":
                return self.multiply(a, b)
            elif operation == "divide":
                return self.divide(a, b)
            else:
                logging.error("Unsupported operation: %s", operation)
                raise ValueError(f"Unsupported operation: {operation}")
        except Exception as e:
            logging.error("Error in calculate: %s", e)
            raise

    def add_numbers(self, a, b):
        """Adds two numbers.

        Args:
            a (float): The first number.
            b (float): The second number.

        Returns:
            float: The sum of the two numbers.
        """
        return a + b

    def multiply(self, a, b):
        """Multiplies two numbers.

        Args:
            a (float): The first number.
            b (float): The second number.

        Returns:
            float: The product of the two numbers.
        """
        return a * b

    def divide(self, a, b):
        """Divides the first number by the second number.

        Args:
            a (float): The numerator.
            b (float): The denominator.

        Returns:
            float: The result of the division.

        Raises:
            ZeroDivisionError: If the denominator is zero.
        """
        if b == 0:
            logging.error("Division by zero attempted.")
            raise ZeroDivisionError("Cannot divide by zero.")
        return a / b