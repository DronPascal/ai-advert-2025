import logging

# Configure logging
logging.basicConfig(level=logging.ERROR)

def add_numbers(a, b):
    """Adds two numbers and returns the result."""
    try:
        result = a + b
        return result
    except Exception as e:
        logging.error("Error in add_numbers: %s", e)
        raise

def multiply(x, y):
    """Multiplies two numbers and returns the result."""
    try:
        return x * y
    except Exception as e:
        logging.error("Error in multiply: %s", e)
        raise

def divide(a, b):
    """Divides a by b and returns the result. Raises ZeroDivisionError if b is zero."""
    try:
        return a / b
    except ZeroDivisionError as e:
        logging.error("Division by zero in divide: %s", e)
        raise
    except Exception as e:
        logging.error("Error in divide: %s", e)
        raise